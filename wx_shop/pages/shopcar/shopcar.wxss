/* pages/shopcar/shopcar.wxss */
.shop-car .warp{
    
    padding: 0 20rpx
}
.shop-area{
    height: 90vh;
    overflow: auto;
}
.shop-car .item{
    display: flex;
    align-items: center;
    padding: 0 20rpx;
    margin:  20rpx 0;
    background: rgba(153, 155, 160, 0.5);
    border-radius: 20rpx
}
.shop-car .select{
    width: 50rpx;
    height: 50rpx;

}
.shop-car .img{
    width: 200rpx;
    height: 200rpx;

}
.shop-car .select>image,.shop-car .img>image{
    width: 100%;
    height: 100%;
    
}
.shop-car .detail{
    flex: 1;
    
}
.shop-car .detail .name{
   font-size: 30rpx;
   color: rgb(86, 129, 12)
}
.shop-car .detail .type{
   color: rgb(26, 119, 80)
}
.shop-car .detail .price{
   color: rgb(47, 14, 122)
}
.shop-car .detail .unit{
   color: rgb(26, 43, 119)
}
.shop-car .detail .meg{
    display: flex;
    flex-wrap: wrap;
}
.shop-car .detail .meg>text{
   font-size: 25rpx;
   margin-right: 20rpx;
}
.shop-car .detail .count{
    display: flex;
    align-items: center;
    justify-content: space-around;
    padding-right: 40rpx
}
.shop-car .detail .count>button{
    width: 40rpx;
    min-height: 40rpx;
    padding: 0;
    margin: 0;
    font-size: 40rpx;
    line-height: 40rpx
}
.shop-car .sin-price{
    width: 120rpx;
    
}
.shop-car .sin-price .f{
    color: rgb(255, 60, 0);
    font-size: 20rpx
}
.shop-car .sin-price .price{
    color: rgb(55, 0, 255);
    font-size: 40rpx
}
.shop-car .del>button{
    width: 60rpx;
    min-height: 0;
    padding: 0;
    margin: 0;
    font-size: 30rpx
}
.shop-car .footer{
    display: flex;
    align-items: center;
    justify-content: space-between;
    padding: 10rpx 20rpx;
    background: rgba(32, 83, 68, 0.459);
    border-radius: 10rpx
}
.shop-car .all-select{
    display: flex;
    align-items: center;
    font-size: 20rpx;
}
.shop-car .all-select>image{
    width: 50rpx;
    height: 50rpx;
}
.shop-car .all-noall{
    width: 60rpx;
    color: rgb(56, 55, 54);
}
.shop-car .all-meg{
    font-size: 26rpx;
    color: rgb(59, 56, 52);
}
.shop-car .all-price .f{
    color: rgb(255, 60, 0);
    font-size: 20rpx
}
.shop-car .all-price .price{
    color: rgb(55, 0, 255);
    font-size: 40rpx
}
.shop-car .buy>button{
    width: 140rpx;
    min-height: 0;
    padding: 10rpx 20rpx;
    margin: 0;
    letter-spacing: 4px;
    font-size: 32rpx;
    background: rgb(255, 60, 0);
    color: wheat;
}