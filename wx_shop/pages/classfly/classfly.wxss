/* pages/classfly/classfly.wxss */

.classfly-wrap {
    height: 100%;
    display: flex;
}

.classfly-wrap .left {
    width: 200rpx;
    padding: 30rpx 5rpx;
    background: rgb(109, 106, 106);
}

.classfly-wrap .left .item {
    text-align: center;
    padding: 20rpx 0;
    color: rgb(26, 33, 34);
}

.classfly-wrap .left .item.active {
    border-left: 3px solid rgb(199, 196, 17);
    color: rgb(199, 196, 17);
}

.classfly-wrap .right {
    flex: 1;
    padding: 20rpx 10rpx;
    background: rgb(157, 160, 157);
}
.classfly-wrap .right .content{
    height: 100%;
    display: flex;
    flex-direction: column;
}
.classfly-wrap .right .page-section-spacing {
    display: flex;
    flex-wrap: wrap;
    justify-content: space-between;
}

.classfly-wrap .right .page-section-title {
    height: 280rpx;
}
.classfly-wrap .right .limt{
    flex:1;
    overflow: auto;
}
.classfly-wrap .right .title {
    padding-bottom: 10rpx;
    font-size: 26px;
    color: rgb(139, 102, 0);
    text-align: center;
}

.classfly-wrap .right .title-img {
    margin: 0 auto;
    width: 500rpx;
    height: 200rpx;
    
}

.classfly-wrap .right .title-img>image {
    width: 100%;
    height: 100%;
    border-radius: 15rpx;
}

.classfly-wrap .right .flex-item {
    display: flex;
    flex-direction: column;
    justify-content: space-around;
    align-items: center;
    width: 48%;
    height: 100%;
    margin-top: 20rpx;
    padding-bottom: 20rpx;
    border-radius: 8rpx;
    box-shadow: 0 0 10px #181d1d9a;
}

.meg {
    display: flex;
    flex-direction: column;
    justify-content: space-around;
    font-size: 30rpx;
}

.meg>text {
    font-size: 24rpx;
    margin: 10rpx 0;
    color: rgb(35, 39, 23);
}

